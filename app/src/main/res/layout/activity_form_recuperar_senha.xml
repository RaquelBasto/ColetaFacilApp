<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".FormRecuperarSenha">

    <TextView
        android:id="@+id/emailenviado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="E-mail enviado"
        android:textColor="@color/gray"
        android:textSize="36sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cadeado"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/celular"
        app:layout_constraintTop_toBottomOf="@id/emailenviado"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/txtinf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Por favor, verifique sua caixa \nde email e aperte no link para redifinir a senha"
        app:layout_constraintTop_toBottomOf="@id/cadeado"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"/>



    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/btn_entrar"
        style="@style/Button"
        android:layout_marginTop="60dp"
        android:text="Entrar"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtinf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/btn_entrar"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/registrese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="NÃ£o recebeu nenhum e-mail?"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:textStyle="normal"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressbar" />


        <TextView
            android:id="@+id/registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text=" Aperte aqui"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressbar" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>